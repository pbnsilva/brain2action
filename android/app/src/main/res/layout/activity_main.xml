<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.curiousloop.brain2action.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/find_devices_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find devices"
            android:onClick="onClickFindDevices"/>
        <Button
            android:id="@+id/start_bci_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start BCI"
            android:onClick="onClickStartBci"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/bci_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bci_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"/>
    </ScrollView>
</LinearLayout>
